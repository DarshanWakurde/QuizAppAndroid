<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WonActivity"
    android:background="@drawable/backgroundimage"
    android:orientation="vertical"
    android:gravity="center">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/quiz"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.loadinganimation.LoadingAnimation
                android:id="@+id/celebration"
                android:layout_width="match_parent"
                android:layout_height="382dp"
                android:layout_marginBottom="70dp"
                android:elevation="10dp"
                app:barType="@drawable/clock"
                app:boldText="false"
                app:enlarge="5"
                app:textSize="15sp" />

        <ImageView
            android:id="@+id/tropy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/trophy" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:background="@color/white"
            android:layout_marginTop="167dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/baseline_correct2"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_disabled_by_default_24"
            android:layout_marginTop="214dp"
            android:layout_marginStart="18dp"
            />

        <TextView
            android:id="@+id/corrext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:text="15"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/black"
            android:text="15"
            android:textSize="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/RestartQuiz"
            android:backgroundTint="@color/green"
            android:layout_marginTop="340dp"
            android:layout_marginStart="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ExitQuiz"
            android:text="Exit"
            android:textStyle="bold"
            android:backgroundTint="#ED0D0D"
            android:layout_marginTop="340dp"
            android:layout_marginStart="180dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/char11"
                android:layout_width="185dp"
                android:layout_height="177dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="86dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
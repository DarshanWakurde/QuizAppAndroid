<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz App"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/ExitAppp"/>
    </RelativeLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/black"
        android:max="20"
        app:trackColor="@color/track"
        android:progressBackgroundTint="@color/relative"
        android:id="@+id/progress"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/Question"
        app:cardElevation="20dp"
        android:background="@color/white"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/QuestionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Question here please"

            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        android:onClick="OptionAClick"
        android:background="@color/white"
        android:id="@+id/option1"
        app:cardElevation="20dp"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/option1Text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="Question here please"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/Option2"

        android:layout_margin="10dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        android:onClick="OptionBClick"
        app:cardElevation="20dp"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Question here please"
            android:id="@+id/option2Text"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:onClick="OptionCClick"
        android:background="@color/white"
        android:id="@+id/Option3"
        app:cardElevation="20dp"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/white"
            android:text="Question here please"
            android:textSize="20dp"
            android:id="@+id/option3Text"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:onClick="OptionDClick"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        android:id="@+id/Option4"
        app:cardElevation="20dp"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Question here please"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:id="@+id/option4Text"
            />
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/NextActivity"
        android:layout_margin="15dp"
        android:text="Submit" />


    <Button
        android:id="@+id/endGame"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:background="@color/black"
        android:visibility="gone"
        android:text="Submit"
        android:textColor="@color/white"
        android:textStyle="bold" />
</LinearLayout>